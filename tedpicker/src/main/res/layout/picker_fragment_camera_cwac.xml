<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!--android:layout_height="@dimen/post_detail_picture_viewpager"-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@+id/btn_take_picture">

        <com.commonsware.cwac.camera.CameraView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <com.gun0912.tedpicker.view.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />


    </RelativeLayout>


    <!--android:layout_centerInParent="true"-->

    <!--android:layout_height="@dimen/post_detail_picture_viewpager"-->

    <View
        android:id="@+id/vShutter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btn_take_picture"
        android:layout_width="@dimen/ted_picker_fab_size"
        android:layout_height="@dimen/ted_picker_fab_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_black"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_camera" />

    <ImageButton
        android:id="@+id/flash_toggle"
        android:layout_width="@dimen/ted_picker_fab_size"
        android:layout_height="@dimen/ted_picker_fab_size"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_black"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_flash_off_24dp" />


</RelativeLayout>